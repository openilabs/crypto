!!!
%html
  != @render 'layout/header'
  %body.list
    #content.tree.list
      %h1.full_list_header Mixin List

      != @render 'partials/list_nav'

      #search
        Search:
        %input{ type: 'text' }

      - createLevel = (tree) =>
        %ul
          - for entry in tree
            %li
              - if entry.entity
                %a{href: @pathFor('mixin', entry.entity, @path), target: 'main'}
                  = entry.entity.basename
                - if entry.entity.parent
                  %small.parent
                    <
                    = entry.entity.parent.name
                %small.namespace
                  = entry.entity.namespace
              - else
                %span
                  = entry.name

            = createLevel(entry.children) if entry.children.length > 0

      = createLevel @tree
